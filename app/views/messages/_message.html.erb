<% if message.user == current_user %>
  <div class="outgoing_msg slide-in-bottom">
    <div class="sent_msg">
      <p><%= message.content %></p>
      <span class="time_date"><%= message.created_at.strftime("%-I:%M %p") %> &nbsp&nbsp|&nbsp&nbsp <%= message.created_at.strftime("%B %-d") %> &nbsp&nbsp|&nbsp&nbsp Sent by: <strong><%= message.user.name %></strong></span> </div>
  </div>        
<% else %>
  <div class="incoming_msg slide-in-bottom">
    <div class="incoming_msg_img"> <%= image_tag "logo_oval.svg" %> </div>
    <div class="received_msg">
      <div class="received_width_msg">
        <p><%= message.content %></p>
        <span class="time_date"><%= message.created_at.strftime("%-I:%M %p") %> &nbsp&nbsp|&nbsp&nbsp <%= message.created_at.strftime("%B %-d") %> &nbsp&nbsp|&nbsp&nbsp Sent by: <strong><%= message.user.name %></strong></span></div>
    </div>
  </div>
<% end %>