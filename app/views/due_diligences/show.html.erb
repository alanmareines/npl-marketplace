\<div class="container">
  <div class="dd-new-content">
    <h2> Due-Diligence Plataform</h2>
    <p class="dd-subtitle"> <strong> Due-Diligence of: </strong> <span class="npl-dd"> <%= @npl.name %> </span> </p>
    <ul id="progressbar2">
      <li class="active1"> <strong class="test">Upload Documents</strong></li>
      <li class="active2"> <strong class="test">Analizing Documents</strong></li>
      <li class="active3"> <strong >Due Diligence Finalized</strong></li>
    </ul>
      <div class="dd-doc-list">
        <div>
          <!-- <div class="js-navigation-item" aria-selected="false"> -->

            <!-- <tr class="contract"> -->
          <table>
            <thead>
                <th><a class="js-navigation-open" title="app">Contract Document</a></th>
                <th><a class="js-navigation-open" title="app">Collateral Document</a></th>
                <th><a class="js-navigation-open" title="app">Other Documents</a></th>
              </tr>

            <tbody>
              <tr class="css-truncate css-truncate-target">
                <td> <%= link_to @dd.contract_document.url do%>
                    <%=  cl_image_tag @dd.contract_document.url(:thumnail), :quality=>47, :width=>100, :crop=>"scale" %>
                  <% end %>
                </td>

                <td><%= link_to @dd.collateral_document.url do%>
                  <%=  cl_image_tag @dd.collateral_document.url(:thumnail), :quality=>47, :width=>100, :crop=>"scale" %>
                  <% end %>
                </td>

                <td><%= link_to @dd.other_document.url do%>
                  <%=  cl_image_tag @dd.other_document.url(:thumnail), :quality=>47, :width=>100, :crop=>"scale" %>
                  <% end %>
                </td>
              </tr>
            </tbody>
            </thead>
          </table>  <!-- </div> -->
          </div>
          <div class="dd-chat">
          <h3 class="text-center">Message Board</h3>
          <%= render 'messages/message' %>
        
          <%= simple_form_for [@npl, @dd, @message] do |f| %>
            <div class="message-form form-group d-flex justify-content-between align-items-start">
              <div class="message-form-text flex-grow-1">
                <%= f.input :content, label: false, placeholder: 'Type a message' %>
              </div>
              <button name="button" type="submit" class="btn message-form-submit">
                <i class="fas fa-arrow-circle-right"></i>
              </button>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
