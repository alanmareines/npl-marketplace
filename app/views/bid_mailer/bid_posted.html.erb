<hr>

<table class="table">
  <tbody>
    <tr>
      <th>NPL Name:</th>
      <td><%= @bid.npl.name %></td>
    </tr>
    <tr>
      <th>Your Bid Price:</th>
      <td><%= number_to_currency(@bid.value, unit:"R$", separator: ",", delimiter: ".") %></td>
