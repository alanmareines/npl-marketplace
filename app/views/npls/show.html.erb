<div class="container">
  <div class="npl-show-content d-flex justify-content-around">
    <div class="npl-show">
    <h3><%= @npl.name %></h3>
    <p><strong> Tipo do ativo - </strong><%= @npl.npl_type %></p>
    <p> <strong>Valor de face - </strong><%= @npl.book_value %></p>
    <p> <strong>Devedor - </strong><%= @npl.debtor %></p>
    <p> <strong>Vencimento - </strong><%= @npl.maturity_date %></p>
    <p> <strong>Garantia </strong>- <%= @npl.collateral_description %></p>
    <p> <strong>Valor m√≠nimo </strong> - <%= @npl.min_value %></p>
    <br>
    <p><strong>Documentos</strong></p>

    <% if @npl.document.present? %>
    <%= cl_image_tag @npl.document, :border=>"2px_solid_rgb:6f6b6b", :effect=>"grayscale", :quality=>47, :width=>200, :crop=>"scale" %>
    <% end %>

    <p>Cedido por <strong><%= @npl.user.name %></strong></p>

    <%= link_to "Back to NPLs offers", npls_path, class: "btn btn-primary btn-lg"%>
    <%= link_to "Bid this NPL", new_npl_bid_path(@npl), class: "btn btn-primary btn-lg"%>
  </div>

    <div class="bids-made">
      <% if current_user == @npl.user %>
      <h3>Bids already received</h3>
      <ul class="list-group">
        <% @npl.bids.each do |bid| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= bid.user.name %>
          <%= link_to bid.value, bid_path(bid) %>
        </li>
        <% end %>
      </ul>
      <% elsif @current_user_bids.present? %>
      <h3> <%= @current_user.name %> bids on this NPL</h3>
      <ul class="list-group">
        <% @current_user_bids.each do |bid| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= bid.user.name %>
          <%= link_to bid.value, bid_path(bid) %>
        </li>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>


</div>


