<div class="container">
  <h1><%= @npl.name %></h1>
  <p> Tipo do ativo - <%= @npl.npl_type %></p>
  <p> Valor de face - <%= @npl.book_value %></p>
  <p> Devedor - <%= @npl.debtor %></p>
  <p> Vencimento - <%= @npl.maturity_date %></p>
  <p> Garantia - <%= @npl.collateral_description %></p>
  <p> Valor m√≠nimo - <%= @npl.min_value %></p>
  <br>
  <p>Documentos</p>

  <% if @npl.document.present? %>
    <%= cl_image_tag @npl.document, :border=>"2px_solid_rgb:6f6b6b", :effect=>"grayscale", :quality=>47, :width=>200, :crop=>"scale" %>
  <% end %>

  <p>Cedido por <%= @npl.user.name %></p>
  <%= link_to "Back to NPLs offers", npls_path, class: "btn btn-primary"%>
  <%= link_to "Bid this NPL", new_npl_bid_path(@npl), class: "btn btn-primary"%>
</div>


<div>
  <% if current_user == @npl.user %>
    <h3>Bids already received</h3>
      <ul class="list-group">
        <% @npl.bids.each do |bid| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= bid.user.name %>
            <%= link_to bid.value, bid_path(bid) %>
          </li>
        <% end %>
    </ul>
  <% elsif @current_user_bids.present? %>
    <h3> <%= @current_user.name %> bids on this NPL</h3>
        <ul class="list-group">
          <% @current_user_bids.each do |bid| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= bid.user.name %>
              <%= link_to bid.value, bid_path(bid) %>
            </li>
          <% end %>
      </ul>
  <% end %>
</div>


